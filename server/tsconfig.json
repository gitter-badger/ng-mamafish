{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@configs/*": ["./src/configs/*"],
      "@decorators/*": ["./src/decorators/*"],
      "@filters/*": ["./src/filters/*"],
      "@guards/*": ["./src/guards/*"],
      "@interceptors/*": ["./src/interceptors/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@modules/*": ["./src/modules/*"],
      "@pipes/*": ["./src/pipes/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
